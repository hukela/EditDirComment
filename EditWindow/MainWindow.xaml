<Window x:Class="EditWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditWindow"
        mc:Ignorable="d"
        Title="编辑备注" Height="140" Width="240">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TextBox Margin="10,10,10,50" Text="123"/>
        <Button Width="80" Height="30" Margin="0,0,100,10" Content="确定"/>
        <Button Width="80" Height="30" Margin="0,0,10,10" Content="取消"/>
    </Grid>
</Window>
